<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="forms_navigation.SecondPage"
             Title="{Binding Title}">

    <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Spacing="10" Margin="0, 10, 0, 0">
        <Label HorizontalOptions="Center" VerticalOptions="Center" FontSize="Large" Text="{Binding TextParameter}"/>
        <Button HorizontalOptions="FillAndExpand" VerticalOptions="Center" Text="Last Page" Command="{Binding ShowLastPageCommand}"/>
        <Button HorizontalOptions="FillAndExpand" VerticalOptions="Center" Text="Go back" Command="{Binding GoBackCommand}"/>
    </StackLayout>    
</ContentPage>